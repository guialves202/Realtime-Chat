
<script src="/js/chat.js" type="module" defer></script>
<div class="container">

    <header>
        <div>
            <h1><a href="/">SpaceChat</a></h1>
        </div>

        <div>
            <% if (user) { %>
                <% if (user.role == 'ADMIN') { %>
                    <a href="/dashboard" class="btn-primary">Dashboard</a>
                <% } %>
                <form action="/user/logout" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn btn-primary">Logout</button>
                </form>
            <% } else { %>
                <button class="btn btn-primary signin">Sign In</button>
            <% } %>
            
        </div>
    </header>

    <main>
        <div class="chat">

        </div>

        <div class="send-message">
            <form id="send-message-form">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="text" name="message" id="message" autocomplete="off" autocapitalize="off" placeholder="Send a message...">
                <button type="submit">Send</button>
            </form>
        </div>
    </main>

</div>

<section class="wrapper">
    <div id="stars"></div>
    <div id="stars2"></div>
    <div id="stars3"></div>
</section>

<div class="blur">
    <div class="boxModal">
        <span class="close">x</span>

        <div class="modal-content">
            <h1>Sign in or create an account</h1>
            <form action="/user/login" method="post" id="user-form">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <label for="username">Username</label>
                <input type="text" name="username" id="username" required>

                <label for="password">Password</label>
                <input type="password" name="password" id="password" required>

                <button type="submit">Submit</button>
            </form>
            <p>Obs: create an account with username 'admin' to test the admin dashboard</p>
        </div>
    </div>
</div>